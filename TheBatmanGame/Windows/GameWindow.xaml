<Window x:Class="TheBatmanGame.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameWindow"  
        Height="600" 
        Width="1000"
        WindowState="Normal"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Border BorderThickness="5"
            BorderBrush="Black"
            CornerRadius="15"
            Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"
                       >Use to arrows to move and SPACE to fire</TextBlock>
            <Border Grid.Row="1">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/gotham-city.jpeg"/>
                </Border.Background>
                <Canvas Name="GameCanvas">
                </Canvas>
            </Border>
        </Grid>
    </Border>
</Window>
