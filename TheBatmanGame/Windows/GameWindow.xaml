<Window x:Class="TheBatmanGame.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameWindow"   Height="600" 
        Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Use to arrows to move and SPACE to fire</TextBlock>
        <Canvas Name="GameCanvas"
                Grid.Row="1"
                Background="Pink">
        </Canvas>

    </Grid>
</Window>
